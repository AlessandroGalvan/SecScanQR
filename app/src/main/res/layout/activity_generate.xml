<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/backgroundcolor"
    tools:context="de.t_dankworth.secscanqr.activities.generator.GenerateActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundcolor"
        android:orientation="vertical"
        android:padding="10sp">


        <androidx.cardview.widget.CardView
            android:id="@+id/barcode_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundblue"
                        android:src="@drawable/ic_barcode_black"
                        android:padding="10sp"
                        android:contentDescription="@string/Barcode"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="@string/card_barcode_title" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/card_barcode_hint"
                    android:textColor="?attr/textcolor" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/text_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundpurple"
                        android:src="@drawable/ic_text_black_24dp"
                        android:padding="10sp"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="@string/card_text_title" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/card_text_hint"
                    android:textColor="?attr/textcolor" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/geo_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundpink"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:padding="10sp"
                        android:contentDescription="@string/location_marker"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="@string/card_location_title" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/card_location_hint"
                    android:textColor="?attr/textcolor" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contact_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundgreen"
                        android:src="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:padding="10sp"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="@string/card_contact_title" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/card_contact_hint"
                    android:textColor="?attr/textcolor" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wifi_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundyellow"
                        android:src="@drawable/ic_wifi_black_24dp"
                        android:padding="10sp"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="Wi-Fi" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/card_wifi_hint"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/book_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:gravity="center|start"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:background="@drawable/circlebackgroundred"
                    android:padding="10sp"
                    android:src="@drawable/ic_book_24dp"
                    app:tint="@color/colorWhiteBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Book"
                    android:textColor="?attr/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:background="@color/lightSeperator" />

            <TextView
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create a QR code with the information of a book"
                android:textColor="?attr/textcolor" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgroundorange"
                        android:src="@drawable/ic_id_24dp"
                        android:padding="10sp"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="ID" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Create a QR code with the information of an Identification Card"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/jwt_card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10sp"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/colorPrimary"
                android:gravity="center|start">
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:background="@drawable/circlebackgrounddarkred"
                        android:src="@drawable/ic_jwt_24dp"
                        android:padding="10sp"
                        app:tint="@color/colorWhiteBackground" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10sp"
                        android:textColor="?attr/textcolor"
                        android:text="JWT" />
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="match_parent"
                    android:background="@color/lightSeperator"
                    android:layout_margin="10sp" />

                <TextView
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Create a JWT QR code"
                    android:textColor="?attr/textcolor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>